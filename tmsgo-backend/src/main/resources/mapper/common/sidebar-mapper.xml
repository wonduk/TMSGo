<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.common.mapper.SidebarMapper">
    <!-- ✅ 사이드바 메뉴 목록 조회 -->
    <select id="getSidebarMenu" resultType="com.example.common.model.SidebarMenu">
        SELECT 
			, ID
			, NAME
			, PATH
			, MENU_CODE
			, CSS_CLASS
		FROM MM_MENU
    </select>
</mapper>
